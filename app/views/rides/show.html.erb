<% provide(:title, "Ride") %>

  <div class="container">
    <div class="card mt-5">
      <div class="card-body">
        <h5 class="card-title">タイトル :
          <%= @ride.title %></h5>
        <p>投稿者 :
          <%= @ride.user_name %></p>
        <p class="card-text">メッセージ :
          <%= @ride.message %></p>
          <%= @ride.sch_datetime.to_s(:datetime) %>
          <%= @ride.distance %>
          <%= @ride.rank %>
        <p class="card-text">
          <small class="text-muted"><%= @ride.created_at %></small>
        </p>
        <p>参加予定者:</p>
        <% @ride.j_users.each do |n| %>
          <%= n.name %>
        <% end %>
      </div>
      <%= render 'rides/rides_address'%>
      <div id="map" class="m-5"></div>
    </div>
  </div>
