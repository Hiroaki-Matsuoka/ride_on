<% provide(:title, "Rides index") %>

  <div class="container col-6">
    <h1 class="bg_wtext mt-3">ライド一覧</h1>
    <% if user_signed_in? %>
      <% @rides.each do |ride| %>
        <div class="row no-gutters bg-light position-relative mt-3 rides_index">
          <div class="col-md-4 mb-md-0 p-md-4">
            <img src="<%= "/user_images/#{ride.user_image_name}" %>" class="card-img-top img-thumbnail img-responsive" width="200" height="200">
          </div>
          <div class="col-md-6 position-static p-4 pl-md-0">
            <h5 class="mt-0">Title:
              <%= ride.title %></h5>
              <% if Join.find_by(user_id: current_user.id, ride_id: ride.id) %>
                <p><i class="fas fa-biking fa-2x"></i></p>
              <% end %>
            <p>Message:
              <%= ride.message %></p>
            <p>投稿者:
              <%= ride.user_name %></p>
            <%= link_to "詳細", ride_path(ride), class: "btn btn-primary" %>
            <!-- ログイン中のユーザーとライドを投稿したユーザーの真偽判定 -->
            <% if current_user.id == ride.user.id  %>
              <%= link_to "削除", ride_path(ride), method: :delete, data: {confirm: "削除しますか？"}, class: "btn btn-danger" %>
            <% end %>
            <!-- 参加ボタン -->
            <% if Join.find_by(user_id: current_user.id, ride_id: ride.id) %>
              <%= link_to("/joins/#{ride.id}/destroy", {method: "post"}) do %>
              <i class="fas fa-user-minus fa-2x j_icon btn-secondary"></i>
            <% end %>
          <% else %>
            <%= link_to("/joins/#{ride.id}/create", {method: "post"}) do %>
            <i class="fas fa-user-plus fa-2x j_icon btn-dark"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<% else %>
<p>ログインしてください</p>
<% end %>
