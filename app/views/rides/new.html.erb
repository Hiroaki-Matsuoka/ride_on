<% provide(:title, "Post Ride") %>

  <div class="container mt-3 bg-light new_ride_form">

    <%= form_for @ride, method: :post do |f| %>
    <%= render 'shared/error_messages' %>
    <h1>新しいサイクリングの企画</h1>
    <hr>
    <label>タイトル</label>
    <br />
    <%= f.select :title, ['誰でも参加OK', '初心者向け', '中級者向け', '上級者向け'], { include_blank: '選択してください' }, class: 'pub col-8' %><br />
    <label>予定日</label>
    <br />
    <%= f.date_field :sch_datetime %>
    <%= f.time_field :sch_datetime %><br />
    <br />
    <label>走行距離</label><br />
    <label><%= f.radio_button :distance, '1', class: :rd %> (0~50km)</label>
    <label><%= f.radio_button :distance, '2', class: :rd %> (51~100km)</label>
    <label><%= f.radio_button :distance, '3', class: :rd %> (101~200km)</label>
    <label><%= f.radio_button :distance, '4', class: :rd %> (201km~)</label>
    <br />
    <label>Message</label>
    <p><%= f.text_area :message, size: "10x2", class: "form-control col-12" %></p>
    <label>開催地域</label>
    <%= f.select :prefecture, Ride.ride_areas.keys, {} %><br />
    <br />
    <label>集合場所</label>
    <p><%= f.text_field :address, {class: "form-control col-12"} %></p>
    <input class="btn btn-primary" type="submit" value="投稿">
  <% end %>
</div>
