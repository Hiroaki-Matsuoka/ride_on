<li id="micropost-<%= micropost.id %>">
  <img src="<%= "/user_images/#{micropost.user.image_name}" %>" alt="user_image" width="50" height="50">
  <span class="user"><%= link_to micropost.user.name, micropost.user, {class: "user"} %></span>
  <span class="content"><%= micropost.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
  </span>
</li>
