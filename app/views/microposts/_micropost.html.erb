<li id="micropost-<%= micropost.id %>">
  <img src="<%= "/user_images/#{micropost.user.image_name}" %>" alt="user_image" width="50" height="50">
  <span class="user"><%= link_to micropost.user.name, micropost.user, {class: "user"} %></span>
  <span class="content"><%= micropost.content %></span>
  <span class="timestamp">
    <%= time_ago_in_words(micropost.created_at) %>前に投稿
  </span>
  <% if current_user.id == micropost.user.id  %>
    <%= link_to "delete", micropost_path(micropost), method: :delete, data: {confirm: "削除しますか？"}, class: "btn btn-danger" %>
  <% end %>
</li>
