<% provide(:title, @title) %>
  <div class="container">
    <div class="row">
      <div class="col-4 mypage_card">
        <div class="card" style="width: 18rem;">
          <img src="<%= "/user_images/#{@user.image_name}" %>" class="card-img-top img-thumbnail img-responsive" width="200" height="200">
          <div class="card-body">
            <h5 class="card-title"><%= @user.name %></h5>
            <p class="card-text"><%= @user.email %></p>
            <section class="stats">
              <%= render 'shared/stats' %>
            </section>
            <!-- ログインしてるユーザーの場合のみ投稿フォーム表示 -->
            <% if current_user.id == @user.id %>
              <%= link_to "編集", edit_user_path %>
            </div>
          <% end %>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><%= link_to "ライド一覧", "/user_rides/#{@user.id}" %></li>
            <li class="list-group-item">投稿写真</li>
            <li class="list-group-item">他</li>
          </ul>
          <div class="card-body">
            ex...
          </div>
        </div>
      </div>
      <!-- following follower一覧 -->
      <div class="col-6">
        <h1 class="mt-3 bg_wtext">フォロー中のユーザー</h1>
        <input class="form-control mt-3" id="myInput" type="text" placeholder="Search Curriculum..">
        <%= will_paginate %>
        <table class="table table-striped mt-3 users_st">
          <thead class="bg-primary text-white">
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th></th>
            </tr>
          </thead>
          <% @users.each do |user| %>
            <tbody id="myTable">
              <% if current_user.id == user.id %>
              <% else %>
                <tr>
                  <td><img src="<%= "/user_images/#{user.image_name}" %>" class="mr-3" alt="user_image" width="50" height="50"><%= user.name %></td>
                  <td><%= user.email %></td>
                  <td><%= link_to "詳細", user_path(user.id) %></td>
                </tr>
              <% end %>
            </tbody>
          <% end %>
        </table>
        <%= will_paginate %>
        <%= render 'users_search' %>
      </div>
    </div>
  </div>
