<% provide(:title, @user.name) %>
<div class="row">
  <!-- ここのcolクラスでサイドのプロフィールが伸びなくなるがなぜか間が空く・・・ -->
  <div class="col">
    <div class="card" style="width: 18rem;">
      <img src="<%= "/user_images/#{@user.image_name}" %>" class="card-img-top img-thumbnail img-responsive" width="200" height="200">
      <div class="card-body">
        <h5 class="card-title"><%= @user.name %></h5>
        <p class="card-text"><%= @user.email %></p>
        <%= link_to "編集", edit_user_path %>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= link_to "ライド一覧", "/user_rides/#{@user.id}" %></li>
        <li class="list-group-item">投稿写真</li>
        <li class="list-group-item">他</li>
      </ul>
      <div class="card-body">
        <a href="#" class="card-link">Card link</a>
        <a href="#" class="card-link">Another link</a>
      </div>
    </div>
  </div>


  <!-- 投稿したmicropost一覧 -->
  <div class="col">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
