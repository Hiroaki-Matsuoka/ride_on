<% provide(:title, "Users Index") %>


<div class="container">
  <h1 class="mt-3 bg_wtext">ユーザー一覧</h1>
  <input class="form-control mt-3" id="myInput" type="text" placeholder="Search Curriculum..">

  <%= will_paginate %>
  <table class="table table-striped mt-3 users_st">
    <thead class="bg-primary text-white">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th></th>
      </tr>
    </thead>
    <% @users.each do |user| %>
      <tbody id="myTable">
        <% if current_user.id == user.id %>
        <% else %>
        <tr>
          <td><img src="<%= "/user_images/#{user.image_name}" %>" class="mr-3" alt="user_image" width="50" height="50"><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= link_to "詳細", user_path(user.id) %></td>
        </tr>
        <% end %>
      </tbody>
    <% end %>
  </table>

  <%= will_paginate %>

  <%= render 'users_search' %>

</div>
